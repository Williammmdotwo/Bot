{
  "environment": "production",
  "database": {
    "use_database": true,
    "mock_data": false,
    "ssl_mode": "require"
  },
  "services": {
    "data_manager": {
      "port": 8000,
      "enabled": true,
      "host": "0.0.0.0"
    },
    "strategy_engine": {
      "port": 8001,
      "enabled": true,
      "host": "0.0.0.0"
    },
    "risk_manager": {
      "port": 8002,
      "enabled": true,
      "host": "0.0.0.0"
    },
    "executor": {
      "port": 8003,
      "enabled": true,
      "host": "0.0.0.0"
    }
  },
  "logging": {
    "level": "WARNING",
    "console_output": false,
    "file_path": "/var/log/athena/app.log"
  },
  "trading": {
    "use_demo": false,
    "simulation_mode": false,
    "signal_interval_seconds": 60,
    "progress_interval_seconds": 60,
    "default_symbols": ["SOL-USDT-SWAP"],
    "default_timeframes": ["1h"],
    "capital": 100.0,
    "max_risk_pct": 0.02,
    "max_position_pct": 0.95,
    "position_size_pct": 0.5,
    "trading_symbol": "SOL-USDT-SWAP"
  },
  "strategy": {
    "type": "trend_pullback",
    "enabled": true,
    "ema_period": 144,
    "rsi_period": 14,
    "rsi_oversold": 30,
    "rsi_overbought": 70,
    "stop_loss_pct": 0.03,
    "take_profit_pct": 0.06,
    "use_bollinger_exit": true,
    "bollinger_period": 20,
    "bollinger_std_dev": 2,
    "only_long": true,
    "max_leverage": 3.0,
    "min_leverage": 2.0
  },
  "auth": {
    "internal_token": "athena-internal-token-change-in-production"
  },
  "security": {
    "enable_https": true,
    "require_auth": true,
    "rate_limiting": true
  }
}
