# Athena OS 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ======== 基础配置 ========
# 运行环境: production / development
ENV=production
# 日志级别: DEBUG/INFO/WARNING/ERROR
LOG_LEVEL=INFO

# ======== 交易所 API 配置 (OKX) ========
OKX_API_KEY=your_api_key_here
OKX_SECRET_KEY=your_secret_key_here
OKX_PASSPHRASE=your_passphrase_here
# 是否使用模拟盘: true/false
USE_DEMO=true

# ======== 核心资金配置 ========
# 账户总本金 (USDT) - 用于风控计算
TOTAL_CAPITAL=10000.0

# ======== 全局风控配置 ========
# 单笔风险比例 - 每笔交易风险不超过总资金的百分比
# 0.005 = 0.5% (保守/新手)
# 0.01 = 1.0% (默认/推荐)
# 0.02 = 2.0% (激进/专业)
# 如不设置，默认使用 1.0%
# RISK_PER_TRADE_PCT=0.01

# 最大单笔订单金额 (USDT)
# 如不设置，自动计算为 总资金 × 5.0 (支持 5x 杠杆)
# 例如：10000 U 本金 → 50000 U 单笔限额
# 如需手动控制，可设置此变量
# MAX_ORDER_AMOUNT=50000.0

# ======== 策略选择 ========
# 启用的策略名称: scalper_v1, sniper, dual_ema
# 注意：修改此变量后需要同步修改对应的 ENABLE_* 变量
ACTIVE_STRATEGY=scalper_v1

# ======== Sniper 策略参数 ========
# 是否启用狙击策略: true/false
ENABLE_SNIPER=false
# Sniper 策略资金 (USDT)
SNIPER_CAPITAL=2000.0
# 每次下单数量
SNIPER_POSITION_SIZE=0.1
# 冷却时间（秒）
SNIPER_COOLDOWN=5.0
# 订单类型: market/limit/ioc
SNIPER_ORDER_TYPE=market
# 大单阈值（USDT）- 单笔交易超过此金额时跟随
SNIPER_MIN_BIG_ORDER=5000.0

# ======== ScalperV1 策略参数 ========
# 是否启用 ScalperV1 策略: true/false
ENABLE_SCALPER_V1=true
# ScalperV1 策略资金 (USDT)
SCALPER_CAPITAL=100.0
# 交易对 (建议选择流动性好且波动大的，如 SOL-USDT-SWAP)
SCALPER_SYMBOL=SOL-USDT-SWAP
# 最小流速阈值 (USDT/秒) - 只有超过此成交量才监测
SCALPER_MIN_FLOW=1000.0
# 买卖失衡阈值 (倍数) - 买比卖多 N 倍才开仓
SCALPER_IMBALANCE_RATIO=3.0
# 杠杆倍数 (RiskProfile)
SCALPER_LEVERAGE=5.0
# 止盈百分比 (0.002 = 0.2%)
SCALPER_TAKE_PROFIT_PCT=0.002
# 硬止损百分比 (0.01 = 1%)
SCALPER_STOP_LOSS_PCT=0.01
# 时间止损 (秒) - 持仓超过此时间强制平仓
SCALPER_TIME_LIMIT_SECONDS=5
# 单笔最大订单金额 (USDT)
SCALPER_MAX_ORDER_SIZE=500.0
# 单笔最大亏损占比 (0.02 = 2%)
SCALPER_SINGLE_LOSS_CAP=0.02
# 每日最大亏损占比 (0.05 = 5%)
SCALPER_DAILY_LOSS_LIMIT=0.05
# 持仓大小 (None = 基于风险自动计算)
# SCALPER_POSITION_SIZE=0.1

# ======== DualEMA 策略参数 ========
# 最小流速阈值 (USDT/秒) - 只有超过此成交量才监测
SCALPER_MIN_FLOW=1000.0
# 买卖失衡阈值 (倍数) - 买比卖多 N 倍才开仓
SCALPER_IMBALANCE_RATIO=3.0
# 杠杆倍数 (RiskProfile)
SCALPER_LEVERAGE=5.0
# 止盈百分比 (0.002 = 0.2%)
SCALPER_TAKE_PROFIT_PCT=0.002
# 硬止损百分比 (0.01 = 1%)
SCALPER_STOP_LOSS_PCT=0.01
# 时间止损 (秒) - 持仓超过此时间强制平仓
SCALPER_TIME_LIMIT_SECONDS=5
# 单笔最大订单金额 (USDT)
SCALPER_MAX_ORDER_SIZE=500.0
# 单笔最大亏损占比 (0.02 = 2%)
SCALPER_SINGLE_LOSS_CAP=0.02
# 每日最大亏损占比 (0.05 = 5%)
SCALPER_DAILY_LOSS_LIMIT=0.05
# 持仓大小 (None = 基于风险自动计算)
# SCALPER_POSITION_SIZE=0.1

# ======== DualEMA 策略参数 ========
# 交易对
DUAL_EMA_SYMBOL=BTC-USDT-SWAP
# 快线周期
DUAL_EMA_FAST_PERIOD=9
# 慢线周期
DUAL_EMA_SLOW_PERIOD=21
# 时间周期 (分钟)
DUAL_EMA_TIMEFRAME=5
# 杠杆倍数
DUAL_EMA_LEVERAGE=1.5
# 移动止损 ATR 倍数
DUAL_EMA_ATR_MULTIPLIER=2.0
