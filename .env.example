# ==================== Database Configuration ====================
POSTGRES_USER=athena
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=athena_trader
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://:your_redis_password_here@localhost:6379

# ==================== Application Configuration ====================
# Monolith Application Settings
APP_NAME=athena_trader
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
CONFIG_PATH=/app/config
USE_DATABASE=false

# ==================== Data Source Configuration ====================
# Set to true to use local mock data instead of real API calls
USE_MOCK_DATA=true

# ==================== OKX API Configuration ====================
# 环境选择：production（实盘）或 demo（模拟盘）
OKX_ENVIRONMENT=demo

# 实盘密钥（仅在 OKX_ENVIRONMENT=production 时使用）
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET=your_okx_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here

# 模拟盘密钥（仅在 OKX_ENVIRONMENT=demo 时使用）
OKX_DEMO_API_KEY=your_okx_demo_api_key_here
OKX_DEMO_SECRET=your_okx_demo_secret_here
OKX_DEMO_PASSPHRASE=your_okx_demo_passphrase_here

# ==================== HFT Strategy Configuration ====================
# Strategy Mode: PRODUCTION or DEV
# PRODUCTION (堡垒模式): 严格触发条件，适合实盘交易
# DEV (激进模式): 放宽触发条件，适合开发测试
# DEV 模式特性:
#   - 秃鹫模式：跌幅要求降低 70%（1% → 0.3%）
#   - 狙击模式：阻力位放宽 0.05%
STRATEGY_MODE=PRODUCTION

# HFT Module Configuration / HFT 模块配置
# HFT Enable / 是否启用 HFT 模块（true/false）
HFT_ENABLED=true

# Trading Symbol / 交易对（如 BTC-USDT-SWAP, ETH-USDT-SWAP）
HFT_SYMBOL=SOL-USDT-SWAP

# Trading Mode / 交易模式（hybrid=混合, vulture=秃鹫, sniper=狙击）
HFT_MODE=hybrid

# Order Size / 订单数量（张数，整数）
HFT_ORDER_SIZE=1

# EMA Fast Period / 快速 EMA 周期（整数，默认 9）
HFT_EMA_FAST_PERIOD=9

# EMA Slow Period / 慢速 EMA 周期（整数，默认 21）
HFT_EMA_SLOW_PERIOD=21

# IOC Slippage Percentage / IOC 订单滑点百分比（如 0.002 表示 0.2%）
HFT_IOC_SLIPPAGE_PCT=0.002

# Sniper Flow Window / 狙击模式流量分析窗口（秒，默认 3.0）
HFT_SNIPER_FLOW_WINDOW=3.0

# Sniper Minimum Trades / 狙击模式最小交易笔数（整数，默认 20）
HFT_SNIPER_MIN_TRADES=20

# Sniper Minimum Net Volume / 狙击模式最小净流量（USDT，默认 10000.0）
HFT_SNIPER_MIN_NET_VOLUME=10000.0

# Risk Ratio / 风险比例（使用余额的百分比，如 0.2 表示 20%，默认 0.2）
HFT_RISK_RATIO=0.2

# Leverage / 杠杆倍数（如 10 表示 10 倍杠杆，默认 10）
HFT_LEVERAGE=10

# Whale Threshold / 大单阈值（USDT，默认 5000.0）
HFT_WHALE_THRESHOLD=5000.0

# Memory Limit MB / 内存限制（MB，默认 500）
HFT_MEMORY_LIMIT_MB=500

# Risk Guard Cooldown Period / 风控冷却期（秒，默认 60）
HFT_COOLDOWN_PERIOD=60

# Risk Guard Max Loss Percent / 风控最大亏损比例（如 0.03 表示 3%，默认 0.03）
HFT_MAX_LOSS_PCT=0.03

# ==================== HFT Logging Configuration ====================
# Log Level / 日志级别（DEBUG/INFO/WARNING/ERROR/CRITICAL，默认 INFO）
HFT_LOG_LEVEL=INFO

# Log File Path / 日志文件路径（可选，如 logs/hft.log）
HFT_LOG_FILE=logs/hft.log

# Log File Max Size MB / 日志文件最大大小（MB，默认 10）
HFT_LOG_FILE_MAX_SIZE_MB=10

# Log File Backup Count / 日志文件备份数量（默认 5）
HFT_LOG_FILE_BACKUP_COUNT=5

# Module Log Levels / 模块日志级别（可选，逗号分隔，如 core.engine:DEBUG,data.memory:INFO）
HFT_MODULE_LOG_LEVELS=

# ==================== External Services ====================
# Alert Webhook Configuration
ALERT_WEBHOOK_URL=

# ==================== Environment ====================
ATHENA_ENV=development
