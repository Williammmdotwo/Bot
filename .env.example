# Athena OS 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ======== 日志配置 ========
# 日志级别: DEBUG/INFO/WARNING/ERROR
LOG_LEVEL=INFO

# ======== 资金配置 ========
# 总资金（USDT）
TOTAL_CAPITAL=10000.0

# ======== 交易所 API 配置 ========
# OKX API Key
OKX_API_KEY=your_api_key_here

# OKX Secret Key
OKX_SECRET_KEY=your_secret_key_here

# OKX Passphrase
OKX_PASSPHRASE=your_passphrase_here

# 是否使用模拟模式
USE_DEMO=true

# ======== 交易配置 ========
# 交易对
TRADING_SYMBOL=BTC-USDT-SWAP

# ======== 风控配置 ========
# 单笔订单最大金额（USDT）
MAX_ORDER_AMOUNT=2000.0

# 下单频率限制（N 秒内最多 N 单）
MAX_FREQUENCY=5

# ======== 狙击策略配置 ========
# 是否启用狙击策略
ENABLE_SNIPER=true

# 狙击策略资金（USDT）
SNIPER_CAPITAL=2000.0

# 狙击策略持仓大小
SNIPER_POSITION_SIZE=0.1

# 狙击策略冷却时间（秒）
SNIPER_COOLDOWN=5.0

# 狙击策略订单类型
# market: 市价单
# limit: 限价单
# ioc: 立即成交或取消
SNIPER_ORDER_TYPE=market

# 狙击策略大单阈值（USDT）
SNIPER_MIN_BIG_ORDER=5000.0
