# ==================== Database Configuration ====================
POSTGRES_USER=athena
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=athena_trader
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://:your_redis_password_here@localhost:6379

# ==================== Application Configuration ====================
# Monolith Application Settings
APP_NAME=athena_trader
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
CONFIG_PATH=/app/config
USE_DATABASE=false

# Log Directory Configuration
# Development: leave empty to use ./logs
# Production: set to your custom log path, e.g., /home/eon/bot/logs
LOGS_DIRECTORY=

# Database Pool Configuration
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ==================== OKX API Configuration ====================
# Real Market Data (Production)
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET=your_okx_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_ENVIRONMENT=production

# Demo API (Simulated Trading)
OKX_DEMO_API_KEY=your_okx_demo_api_key_here
OKX_DEMO_SECRET=your_okx_demo_secret_here
OKX_DEMO_PASSPHRASE=your_okx_demo_passphrase_here
OKX_ENVIRONMENT=demo

# ==================== External Services ====================
# Alert Webhook Configuration
# Used for ERROR and CRITICAL level log notifications
# Leave empty to disable webhook alerts
ALERT_WEBHOOK_URL=

# Example configurations:
# ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
# ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# ALERT_WEBHOOK_URL=https://api.telegram.org/bot{token}/sendMessage

# Note:
# 1. Ensure webhook URL is directly accessible from your server (no proxy)
# 2. System forces proxy disabled for webhook to avoid network issues
# 3. Webhook rate limit: 60 seconds minimum between sends
# 4. Only ERROR and CRITICAL level logs are sent

# ==================== Environment ====================
ATHENA_ENV=development

