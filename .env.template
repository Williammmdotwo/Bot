# ==================== Database Configuration ====================
POSTGRES_USER=athena
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=athena_trader
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://:your_redis_password_here@localhost:6379

# ==================== Application Configuration ====================
# Monolith Application Settings
APP_NAME=athena_trader
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
CONFIG_PATH=/app/config
USE_DATABASE=false

# ==================== Data Source Configuration ====================
# Set to true to use local mock data instead of real API calls
USE_MOCK_DATA=true

# ==================== OKX API Configuration ====================
# 环境选择：production（实盘）或 demo（模拟盘）
OKX_ENVIRONMENT=demo

# 实盘密钥（仅在 OKX_ENVIRONMENT=production 时使用）
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET=your_okx_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here

# 模拟盘密钥（仅在 OKX_ENVIRONMENT=demo 时使用）
OKX_DEMO_API_KEY=your_okx_api_key_here
OKX_DEMO_SECRET=your_okx_secret_here
OKX_DEMO_PASSPHRASE=your_okx_passphrase_here

# ==================== HFT Strategy Configuration ====================
# Strategy Mode: PRODUCTION or DEV
# PRODUCTION (堡垒模式): 严格触发条件，适合实盘交易
# DEV (激进模式): 放宽触发条件，适合开发测试
# DEV 模式特性:
#   - 秃鹫模式：跌幅要求降低 70%（1% → 0.3%）
#   - 狙击模式：阻力位放宽 0.05%
STRATEGY_MODE=PRODUCTION

# ==================== External Services ====================
# Alert Webhook Configuration
ALERT_WEBHOOK_URL=

# ==================== Environment ====================
ATHENA_ENV=development
